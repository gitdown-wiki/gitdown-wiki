{% extends 'base.html.twig' %}

{% from 'page/partials/menu.html.twig' import menu as menu %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            <form class="form wiki-form" action="{{ url('page_update', {'slug': wiki.slug, 'path': page.path}) }}" method="post">
                <fieldset class="form__fieldset wiki-form__editor-container form__fieldset--editor">
                    <input type="hidden" name="content" id="wiki-content" value="{{ page.content }}">
                    <div class="form__input wiki-form__editor" id="wiki-editor">{{ page.content }}</div>
                </fieldset>
                
                <fieldset class="form__fieldset">
                    <label class="form__label form__label--inline" for="wiki-message">Message</label>
                    <input class="form__input form__input--inline" type="text" name="message" value="" placeholder="Message" id="wiki-message">
                </fieldset>
                
                <fieldset class="form__fieldset">
                    <button class="form__submit" type="submit" name="submit">Save</button>
                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
<script data-main="{{ asset('bundles/app/js/custom/main-editor.js') }}" src="{{ asset('bundles/app/js/vendor/require.js') }}" type="text/javascript"></script>
{% endblock %}
